<?xml version="1.0" ?>
<layout>
	<customer_account>
		<reference name="customer_account_navigation">
			<action method="addLink">
				<name>chatbot_settings</name>
				<path>chatbot/settings/index</path>
				<label>Chatbot Settings</label>
			</action>
		</reference>
	</customer_account>
	<chatbot_settings_index> <!-- module/controller/action -->
		<update handle="customer_account" />
		<reference name="my.account.wrapper">
			<block type="core/template" name="chatbot_content" template="werules_chatbot_config.phtml"/>
		</reference>
	</chatbot_settings_index>
	<chatbot_chatdata_index> <!-- module/controller/action -->
		<remove name="head" />
		<remove name="right" />
		<remove name="left" />
		<remove name="header" />
		<remove name="footer" />
		<remove name="customer_form_login" />
		<remove name="customer_form_register" />
		<remove name="customer_form_register_ajax" /> <!-- remove ajax register block from https://github.com/digitalpianism/ajaxlogin module -->
		<reference name="content">
			<block type="core/template" name="chatbot_content" template="werules_chatbot_view.phtml"/>
		</reference>
	</chatbot_chatdata_index>
	<chatbot_chatdata_telegram> <!-- module/controller/action -->
		<remove name="head" />
		<remove name="right" />
		<remove name="left" />
		<remove name="header" />
		<remove name="footer" />
		<remove name="customer_form_login" />
		<remove name="customer_form_register" />
		<remove name="customer_form_register_ajax" /> <!-- remove ajax register block from https://github.com/digitalpianism/ajaxlogin module -->
		<reference name="content">
			<block type="core/template" name="chatbot_content" template="werules_chatbot_view.phtml"/>
		</reference>
	</chatbot_chatdata_telegram>
	<chatbot_chatdata_facebook> <!-- module/controller/action -->
		<remove name="head" />
		<remove name="right" />
		<remove name="left" />
		<remove name="header" />
		<remove name="footer" />
		<remove name="customer_form_login" />
		<remove name="customer_form_register" />
		<remove name="customer_form_register_ajax" /> <!-- remove ajax register block from https://github.com/digitalpianism/ajaxlogin module -->
		<reference name="content">
			<block type="core/template" name="chatbot_content" template="werules_chatbot_view.phtml"/>
		</reference>
	</chatbot_chatdata_facebook>
	<cms_index_index> <!-- module/controller/action -->
		<reference name="content">
			<block type="werules_chatbot/messenger" name="messenger" template="werules_chatbot_messenger_box.phtml"/>
		</reference>
	</cms_index_index>
</layout>
