<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">werules_chatbot_promotionalmessages_form.promotionalmessages_form_data_source</item>
			<item name="deps" xsi:type="string">werules_chatbot_promotionalmessages_form.promotionalmessages_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="config" xsi:type="array">
			<item name="dataScope" xsi:type="string">data</item>
			<item name="namespace" xsi:type="string">werules_chatbot_promotionalmessages_form</item>
		</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
		<item name="buttons" xsi:type="array">
			<item name="back" xsi:type="string">Werules\Chatbot\Block\Adminhtml\PromotionalMessages\Edit\BackButton</item>
			<item name="delete" xsi:type="string">Werules\Chatbot\Block\Adminhtml\PromotionalMessages\Edit\DeleteButton</item>
			<item name="save" xsi:type="string">Werules\Chatbot\Block\Adminhtml\PromotionalMessages\Edit\SaveButton</item>
			<item name="save_and_continue" xsi:type="string">Werules\Chatbot\Block\Adminhtml\PromotionalMessages\Edit\SaveAndContinueButton</item>
		</item>
	</argument>
	<dataSource name="promotionalmessages_form_data_source">
		<argument name="dataProvider" xsi:type="configurableObject">
			<argument name="class" xsi:type="string">Werules\Chatbot\Model\PromotionalMessages\DataProvider</argument>
			<argument name="name" xsi:type="string">promotionalmessages_form_data_source</argument>
			<argument name="primaryFieldName" xsi:type="string">promotionalmessages_id</argument>
			<argument name="requestFieldName" xsi:type="string">promotionalmessages_id</argument>
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="submit_url" path="*/*/save" xsi:type="url"/>
				</item>
			</argument>
		</argument>
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
	</dataSource>
	<fieldset name="General">
		<argument name="data" xsi:type="array">
			<item name="config" xsi:type="array">
				<item name="label" xsi:type="string"/>
			</item>
		</argument>
		<field name="content">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">content</item>
					<item name="formElement" xsi:type="string">textarea</item>
					<item name="source" xsi:type="string">PromotionalMessages</item>
					<item name="sortOrder" xsi:type="number">320</item>
					<item name="dataScope" xsi:type="string">content</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
					</item>
				</item>
			</argument>
		</field>
	</fieldset>
</form>
